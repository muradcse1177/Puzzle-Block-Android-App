<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".activities.paraSoftGameActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:id="@+id/View05"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/leftButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:clickable="true"
                android:contentDescription="left move Button"
                android:scaleType="centerInside"
                android:src="@drawable/aserleft_button_icon_noburn" />

            <View
                android:id="@+id/View04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <ImageButton
                android:id="@+id/rightButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="right Move Button"
                android:scaleType="centerInside"
                android:src="@drawable/hgrewerwertre" />
        </LinearLayout>

        <View
            android:id="@+id/spacerl0"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageButton
            android:id="@+id/paraSofthardDropButton"
            style="@android:style/Widget.ImageWell"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Hard Drop Button"
            android:scaleType="centerInside"
            android:src="@drawable/wertyhard_drop_button_icon_noburn" />

        <View
            android:id="@+id/View03"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <View
            android:id="@+id/View07"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="0" />

    </LinearLayout>

    <com.parallaxsoftblockmatchup.game.paraSoftBlockBoardView
        android:id="@+id/boardView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.1"
        android:background="@null" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:id="@+id/View06"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8" >

            <ImageButton
                android:id="@+id/rotateLeftButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="rotate left Button"
                android:scaleType="centerInside"
                android:src="@drawable/rawertotate_left_button_icon_noburn" />

            <View
                android:id="@+id/View02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <ImageButton
                android:id="@+id/rotateRightButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="rotate right Button"
                android:scaleType="centerInside"
                android:src="@drawable/rotate_right_button_icon_noburn" />

        </LinearLayout>

        <View
            android:id="@+id/bottom_right_spacer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageButton
            android:id="@+id/softDropButton"
            style="@android:style/Widget.ImageWell"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="soft Drop Button"
            android:scaleType="centerInside"
            android:src="@drawable/softerwqt_drop_button_icon_noburn" />

        <View
            android:id="@+id/View01"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/pausebutton_1"
            style="@android:style/Widget.ImageWell"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:text="@string/pausebutton"
            android:textColor="@color/parallaxsoftserror"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColorHint="@color/holo_grey" />

    </LinearLayout>

    <View
        android:id="@+id/top_right_spacer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05" />

</LinearLayout>